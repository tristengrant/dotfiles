include melangey.conf

allow_remote_control yes
enable_audio_bell    no
bell                 none

# Font
font_family      JetBrains Mono Nerd Font
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        12.0
modify_font      cell_height 110%

# Window
remember_window_size yes
initial_window_width  90c
initial_window_height 30c
map ctrl+shift+l set_tab_title

# Tabs
tab_bar_style      powerline
tab_bar_min_tabs   1
tab_activity_symbol âš¡

# Splits
map alt+shift+enter launch --type=tab --cwd=current
map alt+shift+v     launch --cwd=current --location=vsplit
map alt+shift+h     launch --cwd=current --location=hsplit
map alt+shift+w     close_window
map alt+shift+q     close_tab

# Keyboard
map ctrl+shift+left  neighboring_window left
map ctrl+shift+right neighboring_window right
map ctrl+shift+up    neighboring_window up
map ctrl+shift+down  neighboring_window down

# Cursor configuration
cursor_shape     block
cursor_blink_interval 0

# Tab bar
tab_bar_edge     top
tab_bar_style    powerline
tab_powerline_style slanted

# Window layout
window_padding_width 8
